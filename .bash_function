# bash functions

# open pdfs with okular without cluttering the terminal
function pdf() {
        okular "$@" >&/dev/null &
}

# open google-chrome browser with no arguments
# or a variable number of html files
function browser() {
        google-chrome "$@" >&/dev/null &
}

# faster navigation up one or more directories
# usage: up 3 == cd ../../..
function up() {
	if [[ $1 -gt 0 ]]; then
		count="$1"
		path=""
		while [[ $count -gt 0 ]]; do
			path="${path}../"
			count=`expr $count - 1`
		done
		cd "$path"
	else 
		echo "Usage: up [0-9]+ to go up directories. e.g.: up 2"
	fi
}

# don't add anything to the path if it is already there
function pathmunge() {
	if ! echo $PATH | /bin/egrep -q "(^|:)$1($|:)" ; then
		if [ "$2" = "after" ] ; then
			PATH=$PATH:$1
		else
			PATH=$1:$PATH
		fi
	fi
}	
